<loadingicon ng-show="global.isChangingPage"></loadingicon>

<ion-side-menus ng-hide="global.isChangingPage" enable-menu-with-back-views="false">
    <ion-side-menu-content>
        <ion-nav-bar ng-show="global.account" class="bar-stable"></ion-nav-bar>

        <ion-nav-view name="menuContent"></ion-nav-view>
    </ion-side-menu-content>

    <ion-side-menu side="left" ng-show="global.account">
        <ion-header-bar>
            <h3 class="energized full-width-center-align">
                {{global.account.FullName | shortenedName}}
            </h3>
        </ion-header-bar>

        <ion-content>
            <ion-list>
                <ion-item ng-show="global.isLoadingMenu">
                    <loadingicon ng-show="global.isLoadingMenu"></loadingicon>
                </ion-item>

                <ion-item ng-hide="global.isLoadingMenu" menu-close ng-repeat="menu in global.menuList" ui-sref="{{menu.URL}}">
                    <i class="side-menu-icon {{menu.IconClass}}"></i>
                    {{menu.MenuName}}
                </ion-item>

                <ion-item menu-close ui-sref="app.login" class="assertive">
                    <i class="side-menu-system-item-icon ion ion-log-out"></i>

                    <b class="side-menu-system-item-text">
                        Đăng xuất
                    </b>
                </ion-item>
            </ion-list>
        </ion-content>
    </ion-side-menu>
</ion-side-menus>